{
  "name": "nest-react-websockets",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "yarn prebuild && concurrently -k \"yarn build:client:dev\" \"yarn dev:server\"",
    "prebuild": "rimraf dist",
    "build": "yarn build:client && yarn build:server",
    "build:client:dev": "webpack --mode development  --config webpack.config.client.js --watch",
    "build:client": "webpack --mode production --config webpack.config.client.js",
    "build:server": "nest build",
    "start:server": "nest start",
    "dev:server": "nest start --watch",
    "debug:server": "nest start --debug --watch",
    "start:prodserver": "node dist/server/server/main"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^9.1.6",
    "@nestjs/platform-socket.io": "^9.1.6",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/websockets": "^9.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "socket.io": "^4.5.3",
    "socket.io-client": "^4.5.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autoprefixer": "^10.4.7",
    "bundle-loader": "^0.5.6",
    "concurrently": "^7.5.0",
    "css-loader": "^6.7.1",
    "esbuild-loader": "^2.20.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.2.5",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "prettier": "^2.3.2",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "style-loader": "^3.3.1",
    "supertest": "^6.1.3",
    "tailwindcss": "^3.1.4",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "util": "^0.12.5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
